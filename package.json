    "@vercel/kv": "^3.0.0",
    "@vercel/mcp-adapter": "^0.11.2",
    "dotenv": "^17.2.3",
    "ejs": "^4.0.1",
    "express": "^5.2.1",
    "express-session": "^1.19.0",
    "jose": "^6.1.3",
    "node-cron": "^4.2.1",
    "node-fetch": "^3.3.2",
    "redis": "^5.10.0",
    "zod": "^3.25.76"
