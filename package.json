{
  "name": "ivan-ads-manager",
  "version": "2.0.0",
  "description": "Meta Ads Manager with web dashboard, automation, and Slack notifications",
  "main": "build/index.js",
  "type": "module",
  "bin": {
    "ivan-ads-manager": "build/index.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/index.ts",
    "dev:web": "tsx src/web/server.ts",
    "start:web": "tsx src/web/server.ts",
    "dev:vercel": "vercel dev",
    "test": "jest",
    "test:tools": "tsx test-tools.js",
    "list:tools": "tsx list-tools.js",
    "test:api": "tsx test-api.js",
    "lint": "eslint src/**/*.ts",
    "prepare": "echo 'Skipping build - use tsx for development'",
    "vercel-build": "npm run build",
    "setup": "node scripts/setup-mcp.js",
    "setup:mcp": "node scripts/setup-mcp.js",
    "health-check": "node scripts/health-check.js",
    "check": "node scripts/health-check.js"
