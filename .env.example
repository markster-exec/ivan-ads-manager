# Meta API Configuration (Required)
META_ACCESS_TOKEN=your_meta_access_token_here
META_APP_ID=your_meta_app_id_here
META_APP_SECRET=your_meta_app_secret_here

# Optional Meta Configuration
META_API_VERSION=v23.0
META_AUTO_REFRESH=true

# Web Dashboard Configuration
PORT=3000
DASHBOARD_PASSWORD=your_secure_password_here
SESSION_SECRET=your_random_session_secret_here

# Slack Notifications (Optional)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/xxx/xxx/xxx

# Redis for Automation Persistence (Optional but recommended)
# Without Redis, automations are lost on redeploy
# In Railway: Add Redis service, it auto-sets REDIS_URL
REDIS_URL=redis://localhost:6379

# Development Environment
NODE_ENV=development
